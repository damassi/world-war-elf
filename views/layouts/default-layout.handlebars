    <!-- Scripts -->
    <script src="/assets/javascripts/vendor.js"></script>
    <script src="/assets/javascripts/app.js"></script>

  </head>

  <body>

    <div class='status'>
        <div class='desktop'>
            <strong>Desktop</strong>
            <hr/>
            <p class='message'></p>

        </div>
        <br>
        <div class='mobile'>
            <strong>Mobile</strong>
            <hr/>
            <p></p>
            <input class='input-sync' name='syncCode' placeholder='Enter Sync code here' />
            <button class='btn-submit'>Submit</button>
            <p class='error'></p>
        </div>

    </div>

    <div id='container'>
        <div id='game-play'>
            <div class="game-wrapper">
                <div id="game-canvas">
                    <canvas id='canvas' width='960' height='600'></canvas>
                </div>
            </div>
            <div class="clouds"></div>

            {{{body}}}

            <footer id="main-footer">
                <div class="holiday-text"></div>
            </footer>
        </div>
    </div>


    <script type="text/javascript" src="/assets/javascripts/socket.io.js"></script>
    <script type="text/javascript" src="/assets/javascripts/sails.io.js"></script>

